@model ProductViewModel

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container">
    <div class="row">
        <div class="col-4 item-photo">
            <img width="400" height="400" src="~/img/@Model.Image" alt="@Model.Name" />
        </div>

        <div class="col-5" style="border: 20px solid white">
            <h3>@Model.Name</h3>

            <h6 class="title-price"><small>SALE</small></h6>
            <h3 style="margin-top: 0">@Model.Price.ToString("C")</h3>

            <div class="section" style="padding-bottom: 20px;">
                <form method="post" asp-controller="ProductsAdmin" asp-action="ProductUpdateStock">
                    <input type="hidden" id="Id" name="Id" value="@Model.Id" />
                    <input type="text" id="Amount" name="Amount" />
                    <button class="btn btn-info">Update Stock</button>
                </form>
            </div>
        </div>
    </div>
</div>

@model IEnumerable<SupplierViewModel>

@using CompleteApp.Mvc.Extensions.Razor

@{
    ViewData["Title"] = "Suppliers";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">New Supplier</a>
</p>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @this.DocumentMask(item.SupplierType, item.Document)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>

                <td class="text-right">
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">
                        <i class="fas fa-search fa-fw"></i>
                    </a>

                    <a disable-link-by-claim-name="Supplier" disable-link-by-claim-value="Update" class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fas fa-pencil-alt fa-fw"></i>
                    </a>

                    <a suppress-by-claim-name="Supplier" suppress-by-claim-value="Delete" class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fas fa-trash fa-fw"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

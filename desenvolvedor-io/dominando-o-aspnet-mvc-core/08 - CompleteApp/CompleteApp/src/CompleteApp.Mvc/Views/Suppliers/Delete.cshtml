@using CompleteApp.Mvc.Extensions.Razor
@model SupplierViewModel

@{
    ViewData["Title"] = $"Delete - {Model.Name}";
}

<div>
    <h4>@ViewData["Title"]</h4>
    <h5>Are you sure you want to delete this?</h5>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Document)
        </dt>
        <dd class="col-sm-10">
            @this.DocumentMask(Model.SupplierType, Model.Document)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-info" asp-action="Index">Back</a>
    </form>
</div>

<partial name="_AddressDetails" />

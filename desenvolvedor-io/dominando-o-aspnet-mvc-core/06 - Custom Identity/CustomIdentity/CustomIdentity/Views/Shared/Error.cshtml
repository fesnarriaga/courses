@model ErrorViewModel
@{
    ViewData["Title"] = Model != null ? Model.Title : "Error";
}

@{
    if (Model == null)
    {
        <div>
            <h2>Ooops! Something went wrong. We are already working on it...</h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Title)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Message)</h2>
    }
}

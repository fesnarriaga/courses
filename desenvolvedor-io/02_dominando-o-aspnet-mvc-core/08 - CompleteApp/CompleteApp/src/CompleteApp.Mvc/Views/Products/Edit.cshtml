@using Microsoft.AspNetCore.Localization
@model ProductViewModel

@{
    ViewData["Title"] = $"Edit {Model.Name}";
}

<h4>@ViewData["Title"]</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="SupplierId" class="control-label"></label><br />
                <input class="form-control" value="@Model.Supplier.Name" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" rows="5" cols="40" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Current Image</label><br />
                <img class="list-image" src="~/img/@Model.ImageUrl" alt="@Model.Name" />
            </div>

            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>

                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="Image" asp-for="Image" />
                    <label data-browse="Search" style="max-width: 400px;" class="custom-file-label" for="Image"></label>
                    <label style="display: none;" id="imageUrl"></label>
                </div>

                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-info" href="javascript:window.history.back();">Back</a>
            </div>

            <input type="hidden" asp-for="Id" />
        </form>
    </div>
</div>

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/uploadFile.js"></script>
}
